<Window x:Class="ChatCat.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChatCat Desktop" Height="450" Width="800">

    <StackPanel>
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoRegular}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoThin}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoLight}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoBold}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoBlack}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoLightItalic}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoBoldItalic}" />
        <TextBlock Text="Hello, World!" FontSize="40" FontFamily="{StaticResource LatoBlackItalic}" />
    </StackPanel>
</Window>