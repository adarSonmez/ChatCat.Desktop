<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Regular fonts -->
    <FontFamily x:Key="LatoRegular">/Fonts/Lato/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoThin">/Fonts/Lato/#Lato Thin</FontFamily>
    <FontFamily x:Key="LatoLight">/Fonts/Lato/#Lato Light</FontFamily>
    <FontFamily x:Key="LatoBold">/Fonts/Lato/#Lato Bold</FontFamily>
    <FontFamily x:Key="LatoBlack">/Fonts/Lato/#Lato Black</FontFamily>
    <FontFamily x:Key="LatoHairline">/Fonts/Lato/#Lato Hairline</FontFamily>
    
    <!-- Italic fonts -->
    <FontFamily x:Key="LatoThinItalic">/Fonts/Lato/#Lato Thin Italic</FontFamily>
    <FontFamily x:Key="LatoLightItalic">/Fonts/Lato/#Lato Light Italic</FontFamily>
    <FontFamily x:Key="LatoBoldItalic">/Fonts/Lato/#Lato Bold Italic</FontFamily>
    <FontFamily x:Key="LatoBlackItalic">/Fonts/Lato/#Lato Black Italic</FontFamily>
    <FontFamily x:Key="LatoHairlineItalic">/Fonts/Lato/#Lato Hairline Italic</FontFamily>
</ResourceDictionary>